<div class="template-topic-controls">
  <DButton
    @icon={{if this.copyConfirm "check" "copy"}}
    @action={{this.copy}}
    @label="templates.copy"
    class={{concat-class
      "btn-default"
      "template-copy"
      (if this.copyConfirm "ok")
    }}
  />
  <DButton
    @action={{this.createNewTopic}}
    @label="templates.new_topic"
    @icon="plus"
    class="template-new-topic"
  />
</div>